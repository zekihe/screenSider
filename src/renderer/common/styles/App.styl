* {
  margin: 0
  padding: 0
  box-sizing: border-box
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif
  background: transparent
  overflow: hidden
  user-select: none
  -webkit-app-region: drag;
}

.app {
  // width: 100vw
  // height: 100vh
  // display: flex
  // justify-content: center
  // align-items: center
  background: transparent
  overflow: hidden
  border-radius: 50px
}

.container {
  display: flex
  align-items: center
  justify-content: space-between
  background: rgba(30, 30, 30, 0.9)
  border-radius: 50px
  padding: 15px 30px
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3)
  backdrop-filter: blur(10px)
  border: 1px solid rgba(255, 255, 255, 0.1)
  width: auto
  min-width: 400px
  height: 80px
  position: relative
  -webkit-app-region: drag
}

/* Status Indicator */
.status-indicator {
  position: relative
  display: flex
  align-items: center
  width: 120px
  padding-right: 20px
  gap: 10px
  color: #fff
}

.status-indicator::after {
  content: ''
  position: absolute
  right: 0
  top: 50%
  transform: translateY(-50%)
  display: block
  height: 24px
  width: 1px
  background-color: #434343
}

.status-dot {
  width: 12px
  height: 12px
  border-radius: 50%
  background: #4CAF50
  box-shadow: 0 0 10px rgba(76, 175, 80, 0.7)
}

.status-indicator.active .status-dot {
  background: #ffd102
}

.status-text {
  font-size: 16px
  font-weight: 500
}

/* Controls */
.controls {
  position: relative
  display: flex
  gap: 20px
}

.control-btn {
  background: none
  border: none
  color: #888
  cursor: pointer
  padding: 10px
  border-radius: 50%
  transition: all 0.3s ease
  display: flex
  align-items: center
  justify-content: center
  position: relative
  -webkit-app-region: no-drag
}

.control-btn:not(.active) {
  color: #b5b5b5
  opacity: 0.6
}

.control-btn:hover {
  background: rgba(255, 255, 255, 0.1)
  color: #fff
  opacity: 0.8
  transform: scale(1.1)
}

.control-btn.active {
  color: #fff
}

/* Recording Button */
.rec-btn {
  display: flex
  align-items: center
  gap: 10px
  background: #FF3B30
  color: #fff
  border: none
  border-radius: 50px
  padding: 12px 16px
  font-size: 18px
  font-weight: 600
  cursor: pointer
  transition: all 0.3s ease
  box-shadow: 0 4px 15px rgba(255, 59, 48, 0.4)
  -webkit-app-region: no-drag
}

.rec-btn:hover {
  background: #FF453A
  box-shadow: 0 6px 20px rgba(255, 59, 48, 0.6)
  transform: scale(1.05)
}

.rec-btn:active {
  transform: scale(0.98)
}

.rec-btn.recording {
  background: #FF453A
  animation: pulse 1s infinite
}

.rec-indicator {
  width: 12px
  height: 12px
  border-radius: 50%
  background: #fff
  transition: all 0.3s ease
}

.rec-indicator.blinking {
  animation: blink 1s infinite
}

/* SVG Icons */
.control-btn svg {
  width: 24px
  height: 24px
}

/* Animations */
@keyframes blink {
  0%, 50% {
    opacity: 1
  }
  51%, 100% {
    opacity: 0
  }
}

@keyframes pulse {
  0% {
    box-shadow: 0 4px 15px rgba(255, 59, 48, 0.4)
  }
  50% {
    box-shadow: 0 8px 25px rgba(255, 59, 48, 0.8)
  }
  100% {
    box-shadow: 0 4px 15px rgba(255, 59, 48, 0.4)
  }
}