{
  "name": "screen-sider",
  "version": "1.0.0",
  "description": "Electron 录屏软件原型",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "rebuild": "electron-rebuild",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "screen-recorder",
    "electron",
    "demo"
  ],
  "author": "zeke hoo",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.2"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@ffmpeg/core": "^0.12.10",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "canvas": "^3.2.0",
    "ffmpeg-static": "^5.1.0",
    "fluent-ffmpeg": "^2.1.2"
  },
  "build": {
    "appId": "com.example.screenrecorder",
    "productName": "Screen Recorder Demo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/*.iml",
      "!{.eslintrc.js,.gitignore,.DS_Store,README.md}"
    ],
    "mac": {
      "category": "public.app-category.video",
      "icon": "build/icons/icon.icns",
      "entitlements": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "需要摄像头权限来录制画中画视频",
        "NSMicrophoneUsageDescription": "需要麦克风权限来录制音频",
        "NSDocumentsFolderUsageDescription": "需要访问文档文件夹来保存录制文件"
      }
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icons"
    }
  }
}
